<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fanosity.kiosk" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FanosityKiosk</name>
    <description>
        Kiosk system for Fanosity events
    </description>
    <author email="info@fanosity.com" href="https://www.fanosity.com">
        Team Fanosity
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-qrscanner" spec="^3.0.1" />
    <plugin name="cordova-plugin-fullscreen" spec="~1.1.0" />
</widget>
